<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme.NoActionBar"
    tools:context=".activities.MessageViewActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/private_chat_barLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:theme="@style/AppTheme.AppBarOverlay">

        <include
            android:id="@+id/private_chat_toolbar"
            layout="@layout/app_toolbar"
            >
        </include>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:id="@+id/privateChatScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:layout_below="@+id/private_chat_barLayout"
        android:layout_above="@+id/newMessageLinearLayout"
        android:layout_alignParentStart="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/msgDisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="60dp"
                android:padding="4dp">
            </TextView>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/newMessageLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/messageEditText"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:inputType="text"
            android:hint="Enter your message..." />

        <ImageButton
            android:id="@+id/sendMsgButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/email_icon"
            android:layout_margin="3dp"
            android:elevation="10dp"
            android:layout_gravity="center" >
        </ImageButton>

    </LinearLayout>

</RelativeLayout>